{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "target": "ESNext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "types": ["node"],
    "baseUrl": ".",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
