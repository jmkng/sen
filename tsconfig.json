{
  "compilerOptions": {
    "module": "ES6",
    "outDir": "dist",
    "target": "ES6",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "#": ["./src"],
      "#/*": ["./src/*"],
    }
  },
  "include": ["src/**/*.ts", "demo/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
